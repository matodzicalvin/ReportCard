<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.codetribe.reportcard.Main2Activity">


    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:enabled="false"
        android:textColor="#000000"
        android:ems="10"
        android:hint="ID"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:background="@drawable/rounded_edittext"
        android:padding="10dip"
        android:textStyle="bold|italic"
        android:id="@+id/editTextId"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/sname"
        android:layout_alignStart="@+id/sname" />


    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:background="@drawable/rounded_edittext"
        android:padding="10dip"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        android:hint="NAME OF STUDENT"
        android:id="@+id/sname"
        android:enabled="false"
        android:layout_below="@+id/editTextId"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/cosc1"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:background="@drawable/rounded_edittext"
        android:padding="10dip"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sname"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="SUBJECT" />

    <EditText
        android:id="@+id/gradecosc"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_edittext"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:padding="10dip"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        android:ems="10"
        android:hint="GRADES"
        android:inputType="number"
        android:layout_alignBaseline="@+id/cosc1"
        android:layout_alignBottom="@+id/cosc1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/calculas"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_edittext"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:padding="10dip"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cosc1"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="CALCULAS" />

    <EditText
        android:id="@+id/gradecal"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_edittext"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:padding="10dip"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        android:ems="10"
        android:hint="GRADES"
        android:inputType="number"
        android:layout_alignBaseline="@+id/calculas"
        android:layout_alignBottom="@+id/calculas"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/statistics"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_edittext"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:padding="10dip"
        android:textStyle="bold|italic"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:hint="STATISTICS"
        android:inputType="textPersonName"
        android:layout_below="@+id/calculas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/gradesta"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_edittext"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:padding="10dip"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        android:ems="10"
        android:hint="GRADES"
        android:inputType="number"
        android:layout_alignBaseline="@+id/statistics"
        android:layout_alignBottom="@+id/statistics"
        android:layout_alignLeft="@+id/gradecal"
        android:layout_alignStart="@+id/gradecal" />

    <Button
        android:id="@+id/btnPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statistics"
        android:layout_marginTop="24dp"
        android:background="@drawable/admin_toyota_button_bg"
        android:text="PREVIOUS"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:background="@drawable/admin_toyota_button_bg"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:layout_alignBottom="@+id/btnPrev"
        android:layout_centerHorizontal="true"
        android:text="SAVE" />

    <Button

        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnSave"
        android:layout_alignParentEnd="true"
        android:background="@drawable/admin_toyota_button_bg"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:textStyle="bold|italic"
        android:layout_marginRight="20dp"
        android:text="NEXT" />

    <Button
        android:id="@+id/btnDelete"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:textColor="#000000"
        android:background="@drawable/admin_toyota_button_bg"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DELETE"
        android:textStyle="bold|italic"
        android:layout_below="@+id/btnPrev"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:textColor="#000000"
        android:background="@drawable/admin_toyota_button_bg"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold|italic"
        android:text="MAIN MENU"
        android:layout_below="@+id/btnDelete"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
</ScrollView>