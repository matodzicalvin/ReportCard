<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/etSecretCode"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:gravity="left"
        android:padding="10dip"
        android:hint="SecretCode"
        android:inputType="textPassword"
        android:maxLength="20"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp" />

    <Button
        android:id="@+id/btnView"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/admin_toyota_button_bg"
        android:text="View Password"
        android:textColor="#000000"
        android:layout_below="@+id/etSecretCode"
        android:layout_alignLeft="@+id/etSecretCode"
        android:layout_alignStart="@+id/etSecretCode" />

    <Button
        android:id="@+id/btnBack"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:textColor="#000000"
        android:background="@drawable/admin_toyota_button_bg"
        android:text="BACK"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnView"
        android:layout_alignStart="@+id/btnView" />

</RelativeLayout>
